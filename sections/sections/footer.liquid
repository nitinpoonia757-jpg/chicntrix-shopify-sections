{%- style -%}
.footer {
  background-color: #111111;
  color: #f5f1e6;
  padding: 40px 20px;
  text-align: center;
  font-family: 'Helvetica Neue', sans-serif;
}
.footer-links {
  list-style: none;
  padding: 0;
  margin-bottom: 20px;
}
.footer-links li {
  display: inline-block;
  margin: 0 15px;
}
.footer-links a {
  color: #f5f1e6;
  text-decoration: none;
  font-size: 13px;
  opacity: 0.8;
}
.footer-links a:hover {
  opacity: 1;
}
.footer-text {
  font-size: 13px;
  opacity: 0.7;
}
{%- endstyle -%}

<footer class="footer">
  <ul class="footer-links">
    {% for link in linklists.footer.links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
  <div class="footer-text">
    Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
  </div>
</footer>
